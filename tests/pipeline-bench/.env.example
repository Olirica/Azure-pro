# Azure Speech (STT harness + TTS probe)
# Copy values from the root project .env before running tests.
SPEECH_KEY=
SPEECH_REGION=

# Azure Translator
TRANSLATOR_KEY=
TRANSLATOR_REGION=
TRANSLATOR_ENDPOINT=https://api.cognitive.microsofttranslator.com

# Optional OpenAI fallback (leave blank to disable)
OPENAI_API_KEY=
OPENAI_TRANSLATE_MODEL=gpt-4o-mini
OPENAI_TRANSLATE_ENDPOINT=https://api.openai.com/v1/chat/completions

# WebSocket server under test
SERVER_WS_URL=ws://localhost:3000/ws
ROOM=demo-room
SPEAKER_TOKEN=demo2025-speaker
LISTENER_TOKEN=demo2025
DEFAULT_TARGET_LANG=fr-FR

# Fast-finals telemetry expectations (optional overrides)
FASTFINALS_FIRST_PREFIX_TARGET_MS=2000
